              <tr><th>Perl version</th>
                <td><code>[% perl_version %]</code></td></tr>
              <tr><th>Dancer version</th>
                <td><code>[% dancer_version %]</code></td></tr>
              <tr><th>Backend</th>
                <td><code>[% settings.apphandler %]</code></td></tr>
              <tr><th>Appdir</th>
                <td><code title="[% appdir FILTER html %]">[% appdir %]</code></td></tr>
